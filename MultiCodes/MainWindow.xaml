<Window x:Class="MultiCodes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:MultiCodes.Views"
        xmlns:vm="clr-namespace:MultiCodes.ViewModels"
        xmlns:local="clr-namespace:MultiCodes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource BgBase800}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20px" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>

        <v:TopBar />
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="85*"/>
            </Grid.ColumnDefinitions>

            <v:FileBar Grid.Column="0" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <v:CodeEditor />
                <v:Console />
            </Grid>
        </Grid>
    </Grid>
</Window>
