<UserControl x:Class="MultiCodes.Views.Console"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiCodes.Views"
             xmlns:vm="clr-namespace:MultiCodes.ViewModels"
             xmlns:conv="clr-namespace:MultiCodes.Lib.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800"
             KeyDown="UserControl_KeyDown"
             >
    
    <UserControl.Resources>
        <conv:CommandToReadonlyConverter x:Key="CommandToReadonlyConverter"/>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource BgBase900}">
        <ScrollViewer>
            <ItemsControl Padding="10,10,10,10" ItemsSource="{Binding Path=CLIBlocks, Source={x:Static vm:ConsoleViewModel.Instance}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBox
                 Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Background="Transparent"
                 IsReadOnly="{Binding ., Converter={StaticResource CommandToReadonlyConverter}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
       
    </Grid>
</UserControl>
