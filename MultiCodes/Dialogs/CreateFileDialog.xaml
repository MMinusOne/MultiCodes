<Window x:Class="MultiCodes.Dialogs.CreateFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiCodes.Dialogs"
        mc:Ignorable="d"
        Title="CreateFileDialog" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Margin="10,10,10,10" Foreground="Black" FontWeight="Bold" FontSize="20">Enter file name:</TextBlock>

            <StackPanel Orientation="Horizontal">
                <TextBox Width="100" Margin="10,10,10,10" x:Name="FileNameTextBox"></TextBox>
                <Button Click="Enter_Click">Create</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
